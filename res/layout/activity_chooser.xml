            android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:orientation="vertical">
        <TextView android:layout_height="match_parent" android:layout_width="match_parent"
                  android:text="@string/activity_chooser_text"/>
        <Button android:id="@+id/demo" android:layout_width="fill_parent"
                android:layout_marginLeft="80dip" android:layout_marginRight="80dip"
                android:layout_marginTop="10dip" android:layout_height="wrap_content"
                android:text="Demo"/>
    </LinearLayout>
</ScrollView>