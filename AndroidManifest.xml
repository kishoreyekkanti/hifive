<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nfc.activities"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-permission android:name="android.permission.NFC"/>
    <application android:label="hifive" android:icon="@drawable/icon" android:debuggable="true">
        <activity android:name=".BusinessCardInputActivity" android:label="BusinessCardInput">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".TagReadActivity"
                  android:label="Read Business Card">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".TagWriteActivity" android:label="Write Business Card">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActivityChooser"/>
        <activity android:name=".SaveBusinessCardActivity" android:label="Save Business Card">
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
    <uses-sdk android:minSdkVersion="10"/>
    <uses-feature android:name="android.hardware.nfc" android:required="true"/>
</manifest> 
